<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnShinrk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="113dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/btnGrowth"
        app:layout_constraintEnd_toStartOf="@+id/btnGrowth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnGrowth" />

    <Button
        android:id="@+id/btnGrowth"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="106dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnShinrk"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="113dp"
        android:layout_height="45dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="54dp"
        android:text=""
        android:textSize="40px"
        app:layout_constraintEnd_toEndOf="@+id/btnGrowth"
        app:layout_constraintStart_toStartOf="@+id/btnShinrk"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>